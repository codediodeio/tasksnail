<% if current_user.needs_engagement? %>

$('.my-tasks ul:first').append('<%= j render partial: "task", locals: {task: @task} %>');
$('.new-task-button').replaceWith('<h4>Registration Required to Add More Tasks!</h4>');
$('form').hide();

<% else %>

$('.my-tasks ul:first').append('<%= j render partial: "task", locals: {task: @task} %>');
$('.new-task-button').show();
$('form').hide();

<% end %>
